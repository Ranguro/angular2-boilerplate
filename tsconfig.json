{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "noImplicitAny": false
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "filesGlob": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "typings/**/*.ts"
    ]
}
