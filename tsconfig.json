{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "filesGlob": [
        "app/**/*.ts",
        "app/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "api",
        "build/api",
        "build/node_modules"
    ]
}
